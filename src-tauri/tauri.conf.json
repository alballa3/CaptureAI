{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "captureai",
  "version": "0.1.0",
  "identifier": "com.captureai.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "screen",
        "label": "test",
        "url": "/screen",
        "decorations": false,
        "resizable": false,
        "fullscreen": true,
        "alwaysOnTop": true,
        "transparent": true,
        "visible": false

      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
    
  }
}